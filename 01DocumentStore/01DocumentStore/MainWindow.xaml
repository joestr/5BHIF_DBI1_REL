<Window x:Class="_01DocumentStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01DocumentStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Auswählen und Hochladen" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="207" Click="Button_SelectAndUpload_Click"/>
        <WebBrowser x:Name="webbrowser" HorizontalAlignment="Left" Height="399" Margin="343,10,0,0" VerticalAlignment="Top" Width="439"/>
        <ListBox x:Name="ListBox_FilteredDocuments" HorizontalAlignment="Left" Height="135" Margin="10,267,0,0" VerticalAlignment="Top" Width="207" SelectionChanged="ListBox_FilteredDocument_SelectionChanged"/>
        <TextBox x:Name="TextField_Search" HorizontalAlignment="Left" Height="23" Margin="10,239,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Suchen" HorizontalAlignment="Left" Margin="142,242,0,0" VerticalAlignment="Top" Width="75" Click="Button_Search_Click"/>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="222,267,0,0" VerticalAlignment="Top" Width="75" Click="Button_Refresh_ListBox_FilteredDocuments"/>
        <ListBox x:Name="ListBox_SavedDocuments" HorizontalAlignment="Left" Height="148" Margin="10,59,0,0" VerticalAlignment="Top" Width="207" SelectionChanged="ListBox_SavedDocuments_SelectionChanged"/>
        <Button Content="Refresh&#xD;&#xA;" HorizontalAlignment="Left" Margin="222,59,0,0" VerticalAlignment="Top" Width="75" Height="19" Click="Button_Refresh_ListBox_SavedDocuments"/>
        <Button Content="Check schema" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,9,0,0" Click="Button_CheckSchemaClick"/>
        <Button Content="Truncate" HorizontalAlignment="Left" Margin="222,292,0,0" VerticalAlignment="Top" Width="75" Click="Button_Truncate_ListBox_FilteredDocuments_Click"/>

    </Grid>
</Window>
